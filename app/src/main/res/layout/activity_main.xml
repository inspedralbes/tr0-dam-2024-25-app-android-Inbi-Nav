<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/quiz_wall">

    <TextView
        android:id="@+id/textViewTiempo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Tiempo restante: 30 segundos"
        android:textColor="@color/neon_azul"
        android:textSize="18sp"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/textViewPregunta"
        android:layout_width="366dp"
        android:layout_height="87dp"
        android:layout_marginTop="70dp"
        android:fontFamily="sans-serif-light"
        android:gravity="center"
        android:padding="16dp"
        android:textColor="@color/neon_azul"
        android:textSize="18sp"
        android:textStyle="italic" />

    <ImageView
        android:id="@+id/imageViewPregunta"
        android:layout_width="300dp"
        android:layout_height="257dp"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="16dp"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="366dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="8dp">

            <Button
                android:id="@+id/buttonOpcion1"
                style="@style/OpcionButtonStyle"
                android:layout_width="105dp"
                android:layout_gravity="center"
                android:layout_margin="4dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/neon_button_border"
                android:backgroundTint="@null"
                android:fontFamily="sans-serif"
                android:padding="12dp"
                android:text="Opci贸n 1"
                android:textColor="@color/neon_azul"
                android:textSize="16sp" />

            <Button
                android:id="@+id/buttonOpcion2"
                style="@style/OpcionButtonStyle"
                android:layout_width="102dp"
                android:layout_gravity="center"
                android:layout_margin="4dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/neon_button_border"
                android:backgroundTint="@null"
                android:fontFamily="sans-serif"
                android:padding="12dp"
                android:text="Opci贸n 2"
                android:textColor="@color/neon_azul"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="8dp">

            <Button
                android:id="@+id/buttonOpcion3"
                style="@style/OpcionButtonStyle"
                android:layout_width="113dp"
                android:layout_gravity="center"
                android:layout_margin="4dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/neon_button_border"
                android:backgroundTint="@null"
                android:fontFamily="sans-serif"
                android:padding="12dp"
                android:text="Opci贸n 3"
                android:textColor="@color/neon_azul"
                android:textSize="16sp" />

            <Button
                android:id="@+id/buttonOpcion4"
                style="@style/OpcionButtonStyle"
                android:layout_width="117dp"
                android:layout_gravity="center"
                android:layout_margin="4dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/neon_button_border"
                android:backgroundTint="@null"
                android:fontFamily="sans-serif"
                android:padding="12dp"
                android:text="Opci贸n 4"
                android:textColor="@color/neon_azul"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
